# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/babble_buddy

# Ollama
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.2

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Admin (for token management)
ADMIN_API_KEY=change-me-in-production

# Memory Feature
FEATURE_MEMORY=true
MEMORY_EMBEDDING_MODEL=nomic-embed-text
MEMORY_RECALL_LIMIT=5
MEMORY_MIN_SIMILARITY=0.6

# Structured Memory Extraction
MEMORY_EXTRACTION_ENABLED=true
MEMORY_EXTRACTION_MODEL=llama3.2
MEMORY_HIGH_IMPORTANCE_THRESHOLD=0.9
MEMORY_ALWAYS_INJECT_HIGH_IMPORTANCE=true
MEMORY_EXTRACTION_BATCH_SIZE=50
MEMORY_EXTRACTION_INLINE=true  # Extract after each message (no cron needed)
